
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <img src="~/images/Logotipo.png" margin:10px;" class="img-rounded" />
</div>

<div id="datosCliente" class="row">

    <div class="form-horizontal">
        <div class="panel panel-default">
            <div class="panel-body">
                <h3>Datos Cliente</h3>
                <div class="form-group">
                    <div class="col-md-10">
                        <button type="button" class="btn btn-default" data-toggle="modal" data-target="#modalCliente" v-on:onclick="pasarCliente">Nuevo Cliente</button>
                    </div>
                </div>
                @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "__AjaxAntiForgeryFormCliente" }))
                {
                    @Html.AntiForgeryToken()
                }
                <div class="form-group">
                    @Html.Label("CLIENTE", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input id="idCliente" type="text" placeholder="Ingrese Nombre Cliente" v-model="nombre" class="col-xs-12">
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("RFC", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="text" placeholder="RFC CLIENTE" v-model="rfc" class="form-control" readonly>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="detalleProductos" class="row">
    <div class="form-horizontal">
        <div class="panel panel-default">
            <div class="panel-body">
                <h3>Detalle Venta</h3>
                <div class="form-group">
                    @Html.Label("Producto", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input id="producto" type="text" placeholder="Ingrese Producto..." class="col-xs-12">
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Cantidad", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input id="cantProduc" type="number" placeholder="Cantidad..." class="col-xs-12">
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Precio Unitario", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input id="pUnitario" type="number" placeholder="Precio sin IVA" class="col-xs-12">
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Total", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="text" placeholder="..." class="form-control" readonly>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="button" value="Agregar Producto" class="btn btn-success" />
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr class="success">
                                <th>
                                    @Html.DisplayName("ID PRODUCTO")
                                </th>
                                <th>
                                    @Html.DisplayName("DESCRIPCION")
                                </th>
                                <th>
                                    @Html.DisplayName("CANTIDAD")
                                </th>
                                <th>
                                    @Html.DisplayName("PRECIO U")
                                </th>
                                <th>
                                    @Html.DisplayName("TOTAL")
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="form-group">
                            @Html.Label("Observaciones: ", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <textarea id="OBSERVACIONES" name="OBSERVACIONES" maxlength="200" class="form-control"></textarea>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="button" value="REGISTRAR VENTA" class="btn btn-primary" />
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>



<div class="modal" tabindex="-1" role="dialog" id="modalCliente">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Nuevo Cliente</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                @using (Ajax.BeginForm("ajaxCliente", "Clientes", new AjaxOptions()
                {
                    HttpMethod = "POST",
                    OnSuccess = "",
                    InsertionMode = System.Web.Mvc.Ajax.InsertionMode.Replace
                })) 
                { 
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.Label("ID CLIENTE", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input id="ID_CLIENTE" type="text" placeholder="..." v-model="idClienteM" class="col-xs-12">
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("CLIENTE", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input id="RAZON_SOCIAL" type="text" placeholder="Ingrese Nombre Completo Cliente" v-model="nombreM" class="col-xs-12">
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("RFC", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input id="RFC" type="text" placeholder="RFC Cliente" v-model="rfcM" class="form-control" >
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("LIMITE DE CREDITO", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input id="LIMITE_CREDITO" type="number" placeholder="Monto limite de crédito" v-model="lCredito" class="form-control" >
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("DIAS DE CREDITO", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input id="DIAS_CREDITO" type="number" placeholder="Monto limite de crédito" v-model="dCredito" class="form-control" >
                        </div>
                    </div>
                }

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary">Registrar</button>  
            </div>
        </div>
    </div>
</div>



@section scripts
{
    <script src="~/Scripts/vue.js"></script>
    <script src="~/Scripts/vue-resource.js"></script>
    <script src="~/Scripts/vue/Ventas.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.js"
        integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
        crossorigin="anonymous"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
}

